import random

lower_limit = 1
upper_limit = 20
score = 0

while True:
    hidden = random.randint(lower_limit, upper_limit)

    while True:
        try:
            x = int(input(f"Please enter a guess between 1 to 20: "))
            if lower_limit <= x <= upper_limit:
                if x < hidden:
                    print("Too low")
                    score-=1
                elif x > hidden:
                    print("Too high")   
                    score-=1  
                else:
                    score += 5
                    print("Congratulations, you've guessed it right.")
                    print("Your current score is: {}".format(score))                    
                    break
            else:
                print("Invalid entry. Please enter a number within the specified range.")
        except ValueError:
            print("Invalid entry. Please enter a valid number.")


 
 