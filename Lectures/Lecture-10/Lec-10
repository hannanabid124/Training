'''import random

while True:
    val = random.randint(1, 20)
    ans = input("What is the square of " + str(val) + "? ")

    try:
        ans = int(ans)
    except ValueError:
        print("Invalid input. Please enter an integer.")
        continue

    if val * val == ans:
        print("Correct.")
    else:
        print("Incorrect Answer")'''
        

