'''import random

hidden = 12
lower_limit = 1
upper_limit = 20

while True:
    try:
        x = int(input(f"Please enter a guess between 1 to 20: "))
        if lower_limit <= x <= upper_limit:
            if x < hidden:
                print("Too low")
            elif x > hidden:
                print("Too high")
            else:
                print("Congratulations, you've guessed it right.")
                break
        else:
            print("Invalid entry. Please enter a number within the specified range.")
    except ValueError:
        print("Invalid entry. Please enter a valid number.")'''
        

'''import random

lower_limit = 1
upper_limit = 20
score = 0

while True:
    hidden = random.randint(lower_limit, upper_limit)

    while True:
        try:
            x = int(input(f"Please enter a guess between {lower_limit} to {upper_limit}: "))
            if lower_limit <= x <= upper_limit:
                if x < hidden:
                    print("Too low")
                    score -= 1
                elif x > hidden:
                    print("Too high")   
                    score -= 1  
                else:
                    score += 5
                    print(f"Congratulations, you've guessed it right.")
                    print(f"Your current score is: {score}")                    
                    break
            else:
                print(f"Invalid entry. Please enter a number within the specified range.")
        except ValueError:
            print(f"Invalid entry. Please enter a valid number.")'''

 
 