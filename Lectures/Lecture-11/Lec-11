cgpa = float(input("Please enter your CGPA: "))
if cgpa <0 and cgpa>4:
    print("Invalid Input")
else:
    if cgpa>3:
        print("You are doing Good !! Keep it up")
    elif cgpa > 2:
         print("You need to improve")
    elif cgpa > 1:
         print("You are in danger")
         